@{
    var Model = (ILayout)ViewData["Layout"];
    Model.Header.Classes = Model.Banner != null ? "header_area header_inner_page" : "header_area";
}
<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("~/Views/Shared/Partials/Head.cshtml", Model.Head)
</head>
<body>
    @await Html.PartialAsync("~/Views/Shared/Partials/Header.cshtml", Model.Header)
    @if (Model.Banner != null)
    {
        await Html.RenderPartialAsync("~/Views/Shared/Partials/Banner.cshtml", Model.Banner);
    }
    @RenderBody()
    @await Html.PartialAsync("~/Views/Shared/Partials/Footer.cshtml", Model.Footer)
    @await Html.PartialAsync("~/Views/Shared/Partials/Scripts.cshtml")
    @RenderSection("Scripts", required: false)
</body>
</html>